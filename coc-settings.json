{
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "html",
    "javascript",
    "json",
    "markdown",
    "python",
    "php",
    "typescript",
    "vim"
  ],
  "languageserver": {
    "intelephense": {
      "command": "intelephense",
      "args": [
        "--stdio"
      ],
      "filetypes": [
        "php"
      ],
      "initializationOptions": {
        "storagePath": "/tmp/intelephense"
      }
    }
  }
}
