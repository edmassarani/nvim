{
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "html",
    "javascript",
    "json",
    "markdown",
    "python",
    "php",
    "typescript",
    "vim"
  ],
  "languageserver": {
    "intelephense": {
      "command": "intelephense",
      "args": [
        "--stdio"
      ],
      "filetypes": [
        "php"
      ],
      "initializationOptions": {
        "storagePath": "/tmp/intelephense"
      }
    }
  },
  // typescript config
  "tsserver.npm": "/mnt/c/Program Files/nodejs/npm",
  // snippets config
  "snippets.loadFromExtensions": true,
  "snippets.extends": {
   "typescript": ["javascript"],
   "php": ["php-laravel"]
  },
  // explorer
  "explorer.width": 30,
  "explorer.icon.enableNerdfont": true,
  "explorer.previewAction.onHover": false,
  "explorer.keyMappings": {
    "<cr>": [
      "expandable?",
      "expand",
      "open"
    ],
    "v": "open:vsplit"
  }
}
